{
  // COC Suggest
  "suggest.autoTrigger": "always",
  "suggest.enablePreselect": true,
  "suggest.enablePreview": true,
  "suggest.floatEnable": false,
  "suggest.noselect": false,
  "suggest.removeDuplicateItems": true,
  "suggest.snippetIndicator": " Â°",
  "suggest.triggerAfterInsertEnter": true,
  "suggest.completionItemKindLabels": {
    "class": "\uf0e8",
    "color": "\ue22b",
    "constant": "\uf8ff",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "event": "\ufacd",
    "field": "\uf93d",
    "file": "\uf471",
    "folder": "\uf115",
    "interface": "\ufa52",
    "keyword": "\uf893",
    "operator": "\uf915",
    "property": "\ufab6",
    "reference": "\uf87a",
    "snippet": "\uf64d",
    "struct": "\ufb44",
    "text": "\ue612",
    "typeParameter": "\uf278",
    "unit": "\uf475",
    "value": "\uf8a3",
    "variable": "\uf71b",
    "default": "\uf29c"
  },
  // COC Preferences
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "css",
    "markdown",
    "Markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescript.tsx",
    "typescriptreact",
    "rust",
    "c",
    "cc",
    "cpp",
    "c++",
    "objc",
    "objcpp",
    "java"
  ],
  // ESLint
  "eslint.autoFixOnSave": false,
  "eslint.packageManager": "yarn",
  "eslint.nodePath": "~/.config/yarn/global/node_modules",
  // Prettier
  "prettier.requireConfig": true,
  "prettier.onlyUseLocalVersion": true,
  // TS
  "typescript.showUnused": false,
  "typescript.suggestionActions.enabled": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  // JS
  "javascript.showUnused": false,
  "javascript.suggestionActions.enabled": true,
  "javascript.preferences.importModuleSpecifier": "non-relative",
  // TSServer
  "tsserver.enable": true,
  "tsserver.formatOnType": false,
  // Language Servers
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "index": {
          "threads": 2
        }
      }
    }
  },
  // Java Configs
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-11",
      "path": "/usr/lib/jvm/java-11-openjdk-amd64",
      "default": true
    }
  ]
}
